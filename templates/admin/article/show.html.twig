{% extends 'admin/layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block content %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ article.cover }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ article.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ article.updated ? article.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('admin_article_index') }}">back to list</a>

    <a class="btn btn-dark" href="{{ path('admin_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('admin/article/_delete_form.html.twig') }}
{% endblock %}
